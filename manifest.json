{
  "manifest_version": 3,
  "name": "Table to Chart",
  "version": "1.0.0",
  "description": "Click on any table to visualize its data as a chart",
  "permissions": ["activeTab", "storage", "scripting", "clipboardWrite"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Chart Mode: OFF"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
